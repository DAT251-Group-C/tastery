{
  "name": "widget",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "widget",
  "sourceRoot": "widget/src",
  "tags": [],
  "targets": {
    "build-widget": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "apps/widget/dist",
        "generatePackageJson": true
      },
      "configurations": {
        "production": {
          "mode": "production"
        }
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nx serve widget", "nx build-widget widget"],
        "parallel": false
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm tailwindcss -i ./src/styles.scss -o ./resources/styles.css",
        "cwd": "apps/widget"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/e2e/widget"],
      "options": {
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "lint:fix": {
      "executor": "@nx/eslint:lint",
      "options": {
        "fix": true
      }
    },
    "stylelint": {
      "executor": "nx-stylelint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/widget/src/**/*.{scss,css,vue}"],
        "configFile": ".stylelintrc.js"
      }
    },
    "stylelint:fix": {
      "executor": "nx-stylelint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "fix": true,
        "lintFilePatterns": ["apps/widget/src/**/*.{scss,css,vue}"],
        "configFile": ".stylelintrc.js"
      }
    }
  }
}
