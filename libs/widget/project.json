{
  "name": "widget",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "prefix": "widget",
  "sourceRoot": "widget/src",
  "tags": [],
  "targets": {
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/e2e/widget"],
      "options": {
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "lint:fix": {
      "executor": "@nx/eslint:lint",
      "options": {
        "fix": true
      }
    },
    "stylelint": {
      "executor": "nx-stylelint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/widget/src/**/*.{scss,css}"]
      }
    },
    "stylelint:fix": {
      "executor": "nx-stylelint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "fix": true,
        "lintFilePatterns": ["libs/widget/src/**/*.{scss,css}"]
      }
    }
  }
}
